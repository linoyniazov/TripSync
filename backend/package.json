{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prod": "cp .env_prod .env && tsc -p tsconfig_prod.json && pm2 restart ecosystem.config.js --env production",
    "start": "copy .env_dev .env /y && tsc && node ./dist/src/app.js",
    "dev": "copy .env_dev .env /y && nodemon ./src/app.ts",
    "test": "copy .env_test .env /y && tsc && jest --detectOpenHandles --forceExit --runInBand",
    "testAuth": "copy .env_test .env /y && tsc && jest --detectOpenHandles --forceExit auth.test.ts",
    "testPost": "copy .env_test .env /y && tsc && jest --detectOpenHandles --forceExit post.test.ts",
    "testUser": "copy .env_test .env /y && tsc &&  jest --detectOpenHandles --forceExit user.test.ts",
    "testPostInteraction": "copy .env_test .env /y && tsc && jest --detectOpenHandles --forceExit post_interaction.test.ts",
    "testFile": "copy .env_test .env /y && jest --detectOpenHandles --forceExit file.test.ts",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "",
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.3",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb-memory-server": "^10.1.4",
    "mongoose": "^8.12.1",
    "multer": "^1.4.5-lts.1",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "typescript": "^5.8.2"
    },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2"
    }
}
